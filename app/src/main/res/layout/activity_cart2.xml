<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF2F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Cart Item"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12ssp"></TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cards1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#FFFFFF"
                    app:cardCornerRadius="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="80dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:src="@drawable/img" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amul"
                                android:id="@+id/company1"
                                android:layout_marginVertical="@dimen/_5sdp"
                                android:textColor="@color/Gray"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="@dimen/_10ssp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amul Gold"
                                android:id="@+id/category1"
                                android:textColor="@color/Black"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="@dimen/_13ssp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500 ml"
                                android:id="@+id/volume1"
                                android:textColor="@color/Gray"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="@dimen/_13ssp"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Subscription Price:"
                                    android:fontFamily="@font/noto_sans"
                                    android:textColor="@color/Gray"
                                    android:textSize="@dimen/_10ssp"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚¹"
                                    android:fontFamily="@font/noto_sans"
                                    android:textColor="@color/Black"
                                    android:textSize="@dimen/_13ssp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:id="@+id/price1"
                                    android:fontFamily="@font/noto_sans"
                                    android:textColor="@color/Black"
                                    android:textSize="@dimen/_13ssp"/>

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/minus1"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/round_button"
                                android:shadowColor="@color/Black"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:shadowRadius="1"
                                android:text="-"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="#000"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/quantity1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/Gray"
                                android:fontFamily="@font/noto_sans"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="1"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/pluse1"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/round_button"
                                android:shadowColor="@color/Black"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:shadowRadius="1"
                                android:text="+"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="#000"
                                android:textSize="25sp" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Date"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="@color/Black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/noto_sans"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cards4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="#FFFFFF"
                app:cardCornerRadius="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="5">




                    <TextView
                        android:id="@+id/dat1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mar 15 2000"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/Black" />


                    <Button
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:id="@+id/upda"
                        android:layout_weight="0.4"
                        android:layout_marginLeft="@dimen/_130sdp"
                        android:background="@drawable/rounded_button2"
                        android:text="Upadte"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textColor="@color/CyanP" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/carvs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="@dimen/_10ssp"
                        android:textAlignment="center"
                        android:text="Your order will be delivered before 07:00 AM"
                        android:textColor="@color/Black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Delivery Address"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/Black"
                android:fontFamily="@font/noto_sans"
                android:textSize="@dimen/_12ssp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="#FFFFFF"
                app:cardCornerRadius="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.2"
                        android:id="@+id/addresshome"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/noto_sans"
                        android:text="Other Building Address\nOther Building Address"
                        android:textColor="@color/Gray" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:layout_weight="0.4"
                        android:background="@drawable/rounded_button2"
                        android:text="Update"
                        android:id="@+id/updi"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textColor="@color/CyanP" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>




    </ScrollView>







</RelativeLayout>